<UserControl
    x:Class="ContextWinUI.Views.Components.ExpandCollapseActions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<StackPanel Orientation="Horizontal" Spacing="4">
		<Button Command="{x:Bind ExpandAllCommand}" 
                ToolTipService.ToolTip="Expandir tudo"
                Padding="6">
			<FontIcon Glyph="&#xE710;" FontSize="12"/>
		</Button>
		<Button Command="{x:Bind CollapseAllCommand}" 
                ToolTipService.ToolTip="Recolher tudo"
                Padding="6">
			<FontIcon Glyph="&#xE738;" FontSize="12"/>
		</Button>
	</StackPanel>
</UserControl>