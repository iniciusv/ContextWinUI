<UserControl
    x:Class="ContextWinUI.Views.Components.TagChipsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ContextWinUI.Views.Components"
    mc:Ignorable="d">

	<ItemsControl ItemsSource="{x:Bind DisplayTags, Mode=OneWay}">

		<ItemsControl.ItemsPanel>
			<ItemsPanelTemplate>
				<StackPanel Orientation="Horizontal" Spacing="4"/>
			</ItemsPanelTemplate>
		</ItemsControl.ItemsPanel>

		<ItemsControl.ItemTemplate>
			<DataTemplate x:DataType="local:TagUiWrapper">
				<Border Background="{x:Bind BackgroundBrush, Mode=OneWay}" 
                        CornerRadius="4" 
                        Padding="6,2" 
                        Opacity="0.9">

					<TextBlock Text="{x:Bind Name}" 
                               FontSize="10" 
                               Foreground="{x:Bind ForegroundBrush, Mode=OneWay}" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
				</Border>
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ItemsControl>
</UserControl>